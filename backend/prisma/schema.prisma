datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  username  String?
  firstname String?
  lastname  String?

  organizationId String? // optional FK
  organization   Organization? @relation(fields: [organizationId], references: [id])
}

model Organization {
  id          String   @id @default(uuid())
  name        String
  description String?
  notes       String?
  isEnabled   Boolean  @default(true)
  status      Boolean  @default(true)
  createdAt   DateTime @default(now())

  users    User[]
  branches Branch[]
}

model Branch {
  id             String       @id @default(uuid())
  name           String
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  notes          String? // Optional: if you use this in UI
  status         Boolean? // Optional: if you use this in UI

  createdAt DateTime @default(now()) // ‚Üê Add this

  portalCodes BranchPortalCode[]
}

model BranchPortalCode {
  id              String   @id @default(uuid())
  code            String   @unique
  branch          Branch   @relation(fields: [branchId], references: [id])
  branchId        String
  integrationType String
  status          Boolean  @default(true)
  createdAt       DateTime @default(now())
}
